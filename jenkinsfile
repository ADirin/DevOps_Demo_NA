pipeline {
    agent any

tools {
        // These names must match the ones you configure under
        // "Manage Jenkins" â†’ "Global Tool Configuration"
          jdk 'JAVA_HOME'
         maven 'Maven3'
    }

    stages {
        stage('Print Environment') {
            steps {
                bat 'echo %PATH%'
                bat 'java -version'
                bat '"C:\\Program Files\\apache-maven-3.8.8\\bin\\mvn.cmd" -version'
            }
        }

        stage('Checkout') {
            steps {
                git branch: 'master', url: 'https://github.com/ADirin/DevOps_Demo_NA.git'
            }
        }

        stage('Build') {
            steps {
                bat '"C:\\Program Files\\apache-maven-3.8.8\\bin\\mvn.cmd" clean install'
            }
        }

        stage('Test') {
            steps {
                bat '"C:\\Program Files\\apache-maven-3.8.8\\bin\\mvn.cmd" test'
            }
        }

        stage('Code Coverage') {
            steps {
                bat '"C:\\Program Files\\apache-maven-3.8.8\\bin\\mvn.cmd" jacoco:report'
            }
        }

        stage('Publish Test Results') {
            steps {
                junit '**/target/surefire-reports/*.xml'
            }
        }

        stage('Publish Coverage Report') {
            steps {
                jacoco()
            }
        }
    }
}
