pipeline {
    agent any
    stages {
        stage('check') {
            steps {
                git branch: 'master', url: 'https://github.com/ADirin/DevOps_Demo_NA.git'
            }
        }
        stage('build') {
            steps {
                bat '"C:\\Program Files\\apache-maven-3.8.8\\bin\\mvn.cmd" clean install'
            }
        }
        stage('Test & Coverage') {
            steps {
                bat '"C:\\Program Files\\apache-maven-3.8.8\\bin\\mvn.cmd" test jacoco:report'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                    jacoco execPattern: '**/target/jacoco.exec',
                           classPattern: '**/target/classes',
                           sourcePattern: '**/src/main/java',
                           exclusionPattern: '**/test/**'
                }
            }
        }
    }
}
